{
  "name": "@next-press/caesar",
  "version": "0.0.3",
  "description": "NextPress docker-based development environment",
  "main": "index.js",
  "bin": "caesar",
  "scripts": {
    "build:wordpress": "docker build --rm -t nextpress/caesar-wordpress:${npm_package_version} ./images/wordpress",
    "push:wordpress": "docker push nextpress/caesar-wordpress:${npm_package_version}",
    "build:mkcert": "docker build --rm -t nextpress/caesar-mkcert:${npm_package_version} ./images/mkcert",
    "push:mkcert": "docker push nextpress/caesar-mkcert:${npm_package_version}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/next-press/caesar.git"
  },
  "keywords": [
    "docker",
    "wordpress"
  ],
  "author": "Arindo Duque <arindo@nextpress.co>",
  "license": "GPL-2.0-only",
  "bugs": {
    "url": "https://github.com/next-press/caesar/issues"
  },
  "homepage": "https://github.com/next-press/caesar#readme",
  "dependencies": {
    "cli-welcome": "^2.2.2",
    "commander": "^9.2.0",
    "figlet": "^1.5.2",
    "lodash": "^4.17.21",
    "random-words": "^1.1.2",
    "slugify": "^1.6.5"
  }
}
